<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="eebebek.uyeolmasayfasi">
    <ContentPage.Content>
        <StackLayout>
            <Frame Padding="5" BorderColor="Blue" CornerRadius="7" Margin="40,30,40,0">
                <Entry Placeholder="Adınız ve Soyadınız" x:Name ="adsoyad"/>
            </Frame>
            <Frame Padding="5" BorderColor="Blue" CornerRadius="7" Margin="40,30,40,0">
                <Entry Placeholder="E-posta adresiniz" x:Name ="email" Keyboard="Email"/>
            </Frame>
            <Frame Padding="5" BorderColor="Blue" CornerRadius="7" Margin="40,30,40,0">
                <Entry Placeholder="Şifreniz" x:Name=""/>
            </Frame>
            <Button Text="Üye Ol" TextColor="White" FontSize="Large" Margin="0,50,0,0" BackgroundColor="RoyalBlue"/>
            <Button Text="Geri Dön" TextColor="White" Clicked="geridonbutonu" FontSize="Medium" Margin="0,20,0,0" BackgroundColor="RoyalBlue" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>