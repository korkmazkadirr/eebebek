<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="eebebek.Page1">
    <ContentPage.Content>
        <StackLayout Margin="20" HorizontalOptions="CenterAndExpand" Spacing="20" Orientation="Vertical">
            <Label HeightRequest="70" WidthRequest="150" Text=" Üye Girişi"  TextColor="RoyalBlue" FontSize="Title" FontAttributes="Bold" Margin="140,0"/>
            <Entry Placeholder="User Email" x:Name="UserLoginEmail" Keyboard="Email"/>
            <Entry Placeholder="User Password" x:Name="UserLoginPassword"/>
            <Button HeightRequest="50"
                    WidthRequest="150"
                    CornerRadius="10"
                    BackgroundColor="White"  
                    BorderWidth="1"
                    BorderColor="RoyalBlue"
                    Text="Giriş Yap" 
                    TextColor="RoyalBlue" 
                    x:Name="loginbutton" 
                    Clicked="loginbutton_Clicked"/>

            <Button Text="Hızlıca Üye Olun!"  TextColor="RoyalBlue" BackgroundColor="Transparent" Clicked="uyeolsayfasinagecis"/>
            <Button Text="Vazgeç"  TextColor="RoyalBlue" BackgroundColor="Transparent" Clicked="anasayfayagecisbutonu"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>