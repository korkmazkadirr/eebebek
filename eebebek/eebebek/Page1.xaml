<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="eebebek.Page1">
    <ContentPage.Content>
        <StackLayout Margin="20" VerticalOptions="CenterAndExpand" Spacing="20" Orientation="Vertical">
            
            <Entry Placeholder="User New Email" x:Name="UserNewEmail" Keyboard="Email"/>
            <Entry Placeholder="User New Password" x:Name="UserNewPassword"/>
            <Button BackgroundColor="Black" Text="Signup" TextColor="Black" Clicked="signupbutton_Clicked" x:Name="signupbutton"/>
            <BoxView HeightRequest="1" HorizontalOptions="FillAndExpand" BackgroundColor="Gray"/>
            <Entry Placeholder="User Email" x:Name="UserLoginEmail" Keyboard="Email"/>
            <Entry Placeholder="User Password" x:Name="UserLoginPassword"/>
            <Button BackgroundColor="Black"  Text="Login" TextColor="White" x:Name="loginbutton" Clicked="loginbutton_Clicked"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>